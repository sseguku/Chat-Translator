<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="overflow_style" parent="@android:attr/textViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">13dp</item>        
        <item name="android:paddingLeft">10dp</item>
    
    </style>
    
    <style name="fro_spinner_style" parent="@android:attr/textViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">10dp</item>       
        <item name="android:paddingBottom">8dp</item>       
    
    </style>
    <style name="to_spinner_style" parent="@android:attr/textViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="tran_style" parent="@android:attr/textViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">4dp</item>
       
     </style>
    <style name="ic_launcher_style" parent="@android:attr/textViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
     </style>
    

</resources>
